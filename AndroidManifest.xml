<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ms.organizer">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/organizer_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/organizer_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".activities.MainScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!--<action android:name="android.intent.action.VIEW" />-->
                <!--<category android:name="android.intent.category.DEFAULT" />-->
                <!--<category android:name="android.intent.category.BROWSABLE" />-->
                <!--<data android:scheme="http"-->
                    <!--android:host="www.example.com"-->
                    <!--android:pathPrefix="/organizer" />-->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Recipes"
            android:label="@string/recipes" >
        </activity>
        <activity
        android:name=".activities.Ingredients"
        android:label="@string/ingredients_list">
        </activity>
        <activity
            android:name=".activities.Fridge"
            android:label="@string/fridge">
        </activity>
        <activity
            android:name=".activities.ShoppingList"
            android:label="@string/shopping_list">
        </activity>
        <activity
            android:name=".activities.MealSchedule"
            android:label="@string/meal_schedule">
        </activity>
    </application>
</manifest>